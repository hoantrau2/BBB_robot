<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- base_link-->
    <link name="base_link">
    </link>

    <!-- chassis_link-->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis_link" />
        <origin xyz="-0.125 0 0" />
    </joint>

    <link name="chassis_link">
        <visual>
            <origin xyz="0.125 0.0 0.1225" /><!-- 0.12/2 + 0.0625-->
            <geometry>
                <box size="0.25 0.18 0.12" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.125 0.0 0.1225" /><!-- 0.12/2 + 0.0625-->
            <geometry>
                <box size="0.25 0.18 0.12" />
            </geometry>
            <!-- <material name="black" /> -->
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.125 0.0 0.1225" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- left_wheel_back_link-->
    <joint name="left_wheel_back_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_back_link" />
        <origin xyz="-0.075 0.116 0.0625" rpy="-${pi/2} 0.0 0.0" /><!-- 116 = 90+52/2-->
        <axis xyz="0.0 0.0 1" />
    </joint>

    <link name="left_wheel_back_link">
        <visual>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <!-- <material name="orange" /> -->
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- right_wheel_back_link-->
    <joint name="right_wheel_back_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_back_link" />
        <origin xyz="-0.075 -0.116 0.0625" rpy="${pi/2} 0.0 0.0" /><!-- 116 = 90+52/2-->
        <axis xyz="0.0 0.0 -1" />
    </joint>

    <link name="right_wheel_back_link">
        <visual>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <!-- <material name="orange" /> -->
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- left_wheel_forward_link-->
    <joint name="left_wheel_foward_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_foward_link" />
        <origin xyz="0.075 0.116 0.0625" rpy="-${pi/2} 0.0 0.0" /><!-- 116 = 90+52/2-->
        <axis xyz="0.0 0.0 1" />
    </joint>

    <link name="left_wheel_foward_link">
        <visual>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <!-- <material name="orange" /> -->
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>

    <!-- right_wheel_foward_link-->
    <joint name="right_wheel_foward_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_foward_link" />
        <origin xyz="0.075 -0.116 0.0625" rpy="${pi/2} 0.0 0.0" /><!-- 116 = 90+52/2-->
        <axis xyz="0.0 0.0 -1" />
    </joint>

    <link name="right_wheel_foward_link">
        <visual>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0625" length="0.05132" />
            </geometry>
            <!-- <material name="orange" /> -->
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>
    </link>


</robot>